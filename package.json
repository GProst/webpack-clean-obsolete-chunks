{
  "name": "webpack-clean-obsolete-chunks",
  "version": "0.2.0",
  "description": "A webpack plugin to remove obsolete chunk files in webpack watch mode",
  "author": "GProst a.k.a. German Prostakov <gprostmail@gmail.com>",
  "homepage": "https://github.com/GProst/webpack-clean-obsolete-chunks",
  "license": "MIT",
  "main": "index.js",
  "keywords": [
    "webpack",
    "clean",
    "remove",
    "delete",
    "old",
    "obsolete",
    "chunks",
    "plugin"
  ],
  "scripts": {
    "lint": "eslint './**/*.js' -c './.eslintrc.js'",
    "eslint-fix": "eslint './**/*.js' -c './.eslintrc.js' --fix",
    "install-dev": "yarn && cd test/integration/env/webpack-1 && yarn && cd ../webpack-2 && yarn && cd ../webpack-3 && yarn",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "mocha \"test/unit/**/*.spec.js\"",
    "test-unit-watch": "mocha \"test/unit/**/*.spec.js\" --watch",
    "test-integration": "npm run test-webpack1 && npm run test-webpack2 && npm run test-webpack3",
    "test-webpack1": "mocha \"test/integration/**/webpack-1/{,!(node_modules)/**/}/*.spec.js\" --timeout 15000",
    "test-webpack2": "mocha \"test/integration/**/webpack-2/{,!(node_modules)/**/}/*.spec.js\" --timeout 15000",
    "test-webpack3": "mocha \"test/integration/**/webpack-3/{,!(node_modules)/**/}/*.spec.js\" --timeout 15000",
    "coverage": "istanbul cover _mocha -- \"test/unit/**/*.spec.js\"",
    "travis-coverage": "istanbul cover _mocha --report lcovonly -- \"test/unit/**/*.spec.js\" && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GProst/webpack-clean-obsolete-chunks"
  },
  "bugs": {
    "url": "https://github.com/GProst/webpack-clean-obsolete-chunks/issues"
  },
  "dependencies": {
    "del": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "chai": "^4.1.2",
    "coveralls": "^2.12.0",
    "eslint": "^4.6.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "sinon": "^3.0.0"
  }
}
